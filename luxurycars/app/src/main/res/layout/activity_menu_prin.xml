<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_background"
    android:layout_height="match_parent"
    tools:context=".menu_prin">


    <androidx.cardview.widget.CardView
        android:layout_width="393dp"
        android:layout_height="693dp"
        android:backgroundTint="#000000"
        app:cardCornerRadius="100px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="378dp"
                android:layout_height="61dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/ar_one_sans"
                android:text="Bienvenidos a Luxury Cars aqui encontrara los mejores autos de alta gama, ya sea un coleccionista o un aficionado de los autos veloces "
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/slider" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="378dp"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/ar_one_sans"
                android:text="Elije una opcion para continuar : "
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <Button
                android:id="@+id/button_comprar"
                android:layout_width="161dp"
                android:layout_height="61dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="84dp"
                android:backgroundTint="#9E7801"
                android:text="Comprar Auto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <Button
                android:id="@+id/btncontac"
                android:layout_width="161dp"
                android:layout_height="61dp"
                android:layout_marginTop="172dp"
                android:backgroundTint="#9E7801"
                android:text="contactanos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.068"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <Button
                android:id="@+id/btndetalle"
                android:layout_width="161dp"
                android:layout_height="61dp"
                android:layout_marginTop="172dp"
                android:backgroundTint="#9E7801"
                android:text="detalles de autos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <Button
                android:id="@+id/button_lista"
                android:layout_width="161dp"
                android:layout_height="61dp"
                android:layout_marginTop="84dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#9E7801"
                android:text="Lista de autos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.82"
                app:layout_constraintStart_toEndOf="@+id/button_comprar"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <ViewFlipper
                android:id="@+id/slider"
                android:layout_width="348dp"
                android:layout_height="191dp"
                android:layout_marginStart="38dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="38dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.516"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>